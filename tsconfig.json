{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],  // "typeRoots": [] -> won't work
    "types": ["node"],
    "skipLibCheck": true,
    "downlevelIteration": true,
    "watch": true,
    "moduleResolution": "node",    
  },
  "exclude": [
    "./jobs",
    "./scripts"
  ]
}